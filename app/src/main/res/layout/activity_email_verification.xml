<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EmailVerification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_arrow"
            app:tint="#454545" />

        <TextView
            android:id="@+id/emailVerificationHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/backArrow"
            android:text="Email Verification"
            android:textColor="#454545"
            android:textSize="26dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/headingEndLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/emailVerificationHeading"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/light_grey"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/enterCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headingEndLine"
            android:text="Enter the code sent to your email"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/resendCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterCodeText"
            android:layout_marginTop="17dp"
            android:text="Resend code in 23s"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18dp" />
        
        
        <LinearLayout
            android:id="@+id/resendCodeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/resendCodeText"
            android:weightSum="5"
            android:layout_marginTop="25dp"
            android:paddingLeft="23dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/num1"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/resend_code_rectangle" />
            <EditText
                android:id="@+id/num2"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/resend_code_rectangle" />
            <EditText
                android:id="@+id/num3"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/resend_code_rectangle" />
            <EditText
                android:id="@+id/num4"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/resend_code_rectangle" />
            <EditText
                android:id="@+id/num5"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/resend_code_rectangle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypadLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resendCodeLL"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
            android:id="@+id/keypadRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resendCodeLL"
            android:orientation="horizontal"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:weightSum="3">

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="1"
                android:textSize="32dp"/>
            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="2"
                android:textSize="32dp"/>
            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="3"
                android:textSize="32dp"/>

        </LinearLayout>

            <LinearLayout
            android:id="@+id/keypadRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:weightSum="3">

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="4"
                android:textSize="32dp"/>
            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="5"
                android:textSize="32dp"/>
            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="@color/dark_grey"
                android:text="6"
                android:textSize="32dp"/>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/keypadRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/dark_grey"
                    android:text="7"
                    android:textSize="32dp"/>
                <Button
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/dark_grey"
                    android:text="8"
                    android:textSize="32dp"/>
                <Button
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/dark_grey"
                    android:text="9"
                    android:textSize="32dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/keypadRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.67" />
                <Button
                    android:id="@+id/zero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.6"
                    android:textColor="@color/dark_grey"
                    android:text="0"
                    android:textSize="32dp"/>

                <Button
                     android:id="@+id/backspace"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_marginLeft="30dp"
                     android:layout_marginRight="0dp"
                     android:background="@drawable/backspace"
                     android:textColor="@color/dark_grey" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>